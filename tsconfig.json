{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext", // <--- CHANGE THIS
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext", // <--- CHANGE THIS (or Node16)
    // "noEmitOnError": false
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}